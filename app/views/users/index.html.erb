<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">レシピグラマー一覧</h1>
    </div>
  </div>
</section>

<section>
  <div class="container">
    <div class="row">
      <% @users.each do |user| %>
        <div class="col-xs-3">
          <div class="user-card">
            <div class="row">
              <div class="center-block">
              <%= link_to user_path(user) do %>
                <%= attachment_image_tag user, :profile_image, :fill, 200, 200, fallback: "no_image.jpg", size:'200x200' %>
              <% end %>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-offset-3 col-xs-2">
                <div class="title"><%= link_to user.username, user_path(user) %></div>
              </div>
            </div>
          </div>
          <div class="content">
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

