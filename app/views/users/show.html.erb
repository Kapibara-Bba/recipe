<div class="body">
  <div class="container">
    <div class="user_show">
      <table>
        <tr>
          <th>
            <div class="profile_image">
              <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %>
            </div>
          </th>
          <th>
            <h3 class="username">Nmae</h3><%= @user.username %>
          </th>
        </tr>
        <tr>
          <td>
            <% if @user.id == current_user.id %>
                <h3 class="email">Email</h3><%= @user.email %>
              <div class="row">
                <%= link_to "編集", edit_user_path(@user) %>
              </div>
            <% end %>
          </td>
          <td>
            <h3 class="profile">Profile</h3><%= @user.profile %>
          </td>
        </tr>
      </table>
    </div>
    <div class="row">
      <%= link_to "レシピ一覧", recipes_path %>
    </div>
    <% @user.recipes.each do |recipe| %>
    <div class="col-xs-3">
      <div class="user-recipe">
        <%= attachment_image_tag recipe, :image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %>
        <div class="row">
          <%= link_to "詳細", recipe_path(recipe) %>
          <% if @user.id == current_user.id %>
            <%= link_to "編集", edit_recipe_path(recipe) %>
            <%= link_to "削除", recipe_path(recipe), method: :detele, "data-confirm" => "Are you sure?", class: 'btn btn-danger' %>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
