<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-xs-9">
        <h2>RECIPE一覧</h2>
        <% @recipes.each do |recipe| %>
          <div class="col-xs-3">
            <div class="recipe-card">
              <div class="card-image">
                <%= link_to recipe_path(recipe) do %>
                  <div class="center-block">
                    <%= attachment_image_tag recipe, :image, :fill, 200, 200, fallback: "no_image.jpg", size:'200x200' %>
                  </div>
                  <div class="row">
                    <%= recipe.title %>
                  </div>
                <% end %>
              </div>
              <div class="row">
                <table>
                  <tr>
                    <th>
                      <%= link_to user_path(recipe.user.id) do %>
                        <%= attachment_image_tag recipe.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %>
                      <% end %>
                    </th>
                    <th>
                      <%= link_to user_path(recipe.user.id) do %>
                        <%= recipe.user.username %>
                      <% end %>
                    </th>
                  </tr>
                  <div class="row">
                    <tr>
                      <td><p>更新日</p></td>
                      <td><p><%= recipe.updated_at.strftime("%Y-%m-%d %H:%M") %></p></td>
                    </tr>
                  </div>
                </table>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
