<!DOCTYPE html>
<html>
  <head>
    <title>Recipegram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left" style="color: white">
          <%= link_to root_path, class: "navbar-item" do %>
      <h1 class="title is-4" style="font-family: cursive;">recipegram</h1>
    <% end %>
        </nav>
        <nav>
          <div id="slidemenu">
            <ul class="nav navbar-nav navbar-right">
              <li class="">
                <%= link_to "レシピ一覧", recipes_path, class: "btn btn-info" %>
              </li>
              <li class="">
                <%= link_to "レシピグラマー一覧", users_path, class: "btn btn-info" %>
              </li>
              <% if user_signed_in? %>
                <li class="">
                  <%= link_to "レシピ一覧", recipes_path, class: "btn btn-info" %>
                </li>
                <li class="">
                  <%= link_to "マイページ", user_path(current_user), class: "btn btn-info" %>
                </li>
                <li class="">
                  <%= link_to "新規投稿", new_recipe_path, class: "btn btn-info" %>
                </li>
                <li class="">
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-info" %>
                </li>
              <% else %>
                <li class="">
                  <%= link_to "ログイン", new_user_session_path, class: "btn btn-info" %>
                </li>
                <li class="">
                  <%= link_to "新規登録", new_user_registration_path, class: "btn btn-info" %>
                </li>
              <% end %>
            </ul>
          </div>
        </nav>
      </div>
    </header>


    <% if flash[:notice] %>
      <div class="notification is-info">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="notification is-danger">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>


    <%= yield %>

  </body>
</html>
